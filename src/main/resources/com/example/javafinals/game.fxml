<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javafinals.GameController"
      spacing="20"
      alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Tic Tac Toe" style="-fx-font-size: 24px;"/>

    <!-- Label to display host's IP address -->
    <Label fx:id="ipLabel" text="" style="-fx-font-size: 16px; -fx-text-fill: blue;"/>

    <GridPane fx:id="gameGrid" hgap="10" vgap="10">
        <!-- Buttons will be added programmatically -->
    </GridPane>

    <Label fx:id="statusLabel" text="Waiting for opponent..." style="-fx-font-size: 16px;"/>
</VBox>
