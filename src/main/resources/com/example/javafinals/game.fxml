<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafinals.GameController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #162e36, #289225); -fx-padding: 40;">
    <!-- Title -->
    <Label text="Tic Tac Toe" alignment="CENTER">
        <font>
            <Font name="Arial" size="24"/>
        </font>
        <style>
            -fx-text-fill: white;
        </style>
    </Label>

    <!-- Game Grid -->
    <GridPane fx:id="gameGrid" alignment="CENTER" hgap="10" vgap="10"
              style="-fx-padding: 20; -fx-background-color: rgba(255, 255, 255, 0.2); -fx-border-radius: 10; -fx-background-radius: 10;">
        <!-- The grid buttons will be added dynamically in the controller -->
    </GridPane>

    <!-- Status Label -->
    <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 16px;" />
</VBox>
